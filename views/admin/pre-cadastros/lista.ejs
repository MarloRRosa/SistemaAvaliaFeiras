<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pré-Cadastros Recebidos</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @media (max-width: 768px) {
            .table-responsive {
                font-size: 0.875rem;
            }
            .mobile-stack {
                display: block;
                width: 100%;
                text-align: left;
                padding: 0.5rem;
            }
            .mobile-label {
                font-weight: 600;
                color: #374151;
                display: inline-block;
                min-width: 80px;
            }
        }
    </style>
</head>
<body class="bg-gray-50 p-4">
    <div class="max-w-7xl mx-auto">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Pré-Cadastros Recebidos</h2>
        
        <!-- Versão Desktop/Tablet -->
        <div class="hidden md:block bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telefone</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% preCadastros.forEach(pre => { %>
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    <%= pre.nome %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    <%= pre.email %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                    <%= pre.telefone || '-' %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <a href="/admin/pre-cadastros/<%= pre._id %>" 
                                       class="inline-flex items-center px-3 py-1 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                                        Ver / Aprovar
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Versão Mobile -->
        <div class="md:hidden space-y-4">
            <% preCadastros.forEach(pre => { %>
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
                    <div class="space-y-3">
                        <div class="flex flex-col">
                            <span class="mobile-label text-gray-600">Nome:</span>
                            <span class="text-gray-900 font-medium"><%= pre.nome %></span>
                        </div>
                        
                        <div class="flex flex-col">
                            <span class="mobile-label text-gray-600">Email:</span>
                            <span class="text-gray-700 break-all"><%= pre.email %></span>
                        </div>
                        
                        <div class="flex flex-col">
                            <span class="mobile-label text-gray-600">Telefone:</span>
                            <span class="text-gray-700"><%= pre.telefone || '-' %></span>
                        </div>
                        
                        <div class="pt-2 border-t border-gray-100">
                            <a href="/admin/pre-cadastros/<%= pre._id %>" 
                               class="inline-flex items-center justify-center w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                                Ver / Aprovar
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Mensagem caso não haja pré-cadastros -->
        <% if (!preCadastros || preCadastros.length === 0) { %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
                <div class="text-gray-500">
                    <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <p class="text-lg font-medium text-gray-900 mb-2">Nenhum pré-cadastro encontrado</p>
                    <p class="text-gray-600">Não há pré-cadastros para revisar no momento.</p>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>