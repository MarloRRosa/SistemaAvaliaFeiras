<h2 class="text-2xl font-bold mb-4">Pré-Cadastros Recebidos</h2>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white border rounded shadow-sm text-sm">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-4 py-2 text-left w-1/4">Nome</th>
        <th class="px-4 py-2 text-left w-1/4">Email</th>
        <th class="px-4 py-2 text-left w-1/5">Telefone</th>
        <th class="px-4 py-2 text-left w-1/5">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% preCadastros.forEach(pre => { %>
        <tr class="border-b hover:bg-gray-50">
          <td class="px-4 py-2 max-w-xs truncate" title="<%= pre.nome %>"><%= pre.nome %></td>
          <td class="px-4 py-2 max-w-xs truncate" title="<%= pre.email %>"><%= pre.email %></td>
          <td class="px-4 py-2 whitespace-nowrap"><%= pre.telefone || '-' %></td>
          <td class="px-4 py-2 whitespace-nowrap">
            <a href="/admin/pre-cadastros/<%= pre._id %>" class="inline-block bg-blue-600 text-white py-1 px-3 rounded hover:bg-blue-700 transition text-xs">
              Ver / Aprovar
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
