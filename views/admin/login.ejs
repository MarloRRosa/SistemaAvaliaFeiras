<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h2 class="text-2xl font-semibold mb-6 text-center text-blue-700">Login do Administrador Escolar</h2>

    <% if (error_msg) { %>
      <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4"><%= error_msg %></div>
    <% } %>
    <% if (success_msg) { %>
      <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4"><%= success_msg %></div>
    <% } %>
    <% if (error) { %> <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4"><%= error %></div>
    <% } %>

    <form action="/admin/login" method="POST" class="space-y-4">
      <div>
        <label for="usuario" class="block text-sm font-medium text-gray-700">Usuário (E-mail)</label>
        <input type="email" id="usuario" name="usuario" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" placeholder="seu.email@escola.com.br">
      </div>

      <div>
        <label for="senha" class="block text-sm font-medium text-gray-700">Senha</label>
        <input type="password" id="senha" name="senha" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300">
      </div>

      <div class="flex justify-between items-center"> <a href="/admin/recuperar-senha" class="text-blue-600 hover:underline text-sm">Esqueceu sua senha?</a>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Entrar</button>
      </div>
    </form>

    <div class="text-center mt-4">
      <a href="/" class="text-blue-600 hover:underline text-sm">← Voltar para a página inicial</a>
    </div>
  </div>
</div>