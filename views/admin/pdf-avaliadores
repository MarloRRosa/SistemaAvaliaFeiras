      </tr>
    </thead>
    <tbody>
      <% if (avaliadores && avaliadores.length > 0) { %>
        <% avaliadores.forEach(avaliador => { %>
          <tr>
            <td><%= avaliador.nome %></td>
            <td><%= avaliador.email %></td>
            <td><%= avaliador.telefone || '-' %></td>
            <td>
              <% if (avaliador.projetosAtribuidos && avaliador.projetosAtribuidos.length > 0) { %>
                <%= avaliador.projetosAtribuidos.length %> projeto(s)
              <% } else { %>
                Nenhum
              <% } %>
            </td>
            <td>
              <% if (avaliador.extras && Object.keys(avaliador.extras).length > 0) { %>
                <% Object.keys(avaliador.extras).forEach(key => { %>
                  <div><strong><%= key %>:</strong> <%= avaliador.extras[key] %></div>
                <% }) %>
              <% } else { %>
                <em>Sem dados extras</em>
              <% } %>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5" style="text-align: center;">Nenhum avaliador encontrado.</td>
        </tr>
      <% } %>
