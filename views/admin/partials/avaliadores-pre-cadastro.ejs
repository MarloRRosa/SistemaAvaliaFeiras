<div class="overflow-x-auto bg-white rounded-lg shadow-md border border-gray-200">
  <% if (preCadastros.length > 0) { %>
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
        <tr>
          <th class="py-3 px-4 text-left">Nome</th>
          <th class="py-3 px-4 text-left">Email</th>
          <th class="py-3 px-4 text-left">Telefone</th>
          <th class="py-3 px-4 text-left">Extras</th>
          <th class="py-3 px-4 text-left">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% preCadastros.forEach(cadastro => { %>
          <tr class="hover:bg-gray-50">
            <td class="py-3 px-4"><%= cadastro.nome %></td>
            <td class="py-3 px-4"><%= cadastro.email %></td>
            <td class="py-3 px-4"><%= cadastro.telefone || '-' %></td>
            <td class="py-3 px-4">
              <% if (cadastro.extras) { %>
                <% for (let campo in cadastro.extras) { %>
                  <div><strong><%= campo %>:</strong> <%= cadastro.extras[campo] %></div>
                <% } %>
              <% } else { %>
                <span class="text-gray-400 italic">Nenhum</span>
              <% } %>
            </td>
            <td class="py-3 px-4 space-x-2">
              <form action="/admin/pre-cadastro/<%= cadastro._id %>/aprovar" method="POST" class="inline">
                <button type="submit" class="bg-green-600 text-white px-3 py-1.5 rounded hover:bg-green-700 transition">
                  <i class="fas fa-check-circle mr-1"></i>Aprovar
                </button>
              </form>
              <form action="/admin/pre-cadastro/<%= cadastro._id %>/recusar" method="POST" class="inline" onsubmit="return confirm('Deseja recusar este pré-cadastro?');">
                <button type="submit" class="bg-red-600 text-white px-3 py-1.5 rounded hover:bg-red-700 transition">
                  <i class="fas fa-times-circle mr-1"></i>Recusar
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-gray-500 italic p-4">Nenhum pré-cadastro pendente.</p>
  <% } %>
</div>
