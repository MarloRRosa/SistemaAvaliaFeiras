<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h2 class="text-2xl font-semibold mb-6 text-center text-blue-700">Recuperar Senha de Administrador</h2>
    <p class="text-gray-600 text-center mb-6">
      Informe o e-mail associado à sua conta de administrador. Enviaremos um link para redefinir sua senha.
    </p>

    <% if (error_msg) { %>
      <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4"><%= error_msg %></div>
    <% } %>
    <% if (success_msg) { %>
      <div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4"><%= success_msg %></div>
    <% } %>

    <form action="/admin/recuperar-senha" method="POST" class="space-y-4">
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">E-mail</label>
        <input type="email" id="email" name="email" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" placeholder="seu.email@escola.com.br">
      </div>

      <div class="flex justify-end">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Enviar Link de Redefinição</button>
      </div>
    </form>

    <div class="text-center mt-4">
      <a href="/admin/login" class="text-blue-600 hover:underline text-sm">← Voltar para o Login</a>
    </div>
  </div>
</div>