<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório de Avaliação Offline - <%= feira.nome %></title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            font-size: 11px; /* Tamanho de fonte um pouco menor para PDFs */
            margin: 25px; /* Margens maiores para o PDF */
            color: #333;
        }
        header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #ccc;
            padding-bottom: 10px;
        }
        h1, h2, h3, h4 {
            color: #2c3e50;
            margin-top: 0;
            margin-bottom: 10px;
        }
        .section {
            margin-bottom: 25px;
            padding: 15px;
            border: 1px solid #eee;
            border-radius: 8px;
            background-color: #f9f9f9;
            page-break-inside: avoid; /* Tenta evitar quebrar a seção no meio da página */
        }
        .project-details p {
            margin-bottom: 5px; /* Espaço menor entre os parágrafos de detalhes do projeto */
        }
        .criteria-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            font-size: 10.5px; /* Um pouco menor para a tabela de critérios */
        }
        .criteria-table th, .criteria-table td {
            border: 1px solid #ddd;
            padding: 6px 8px; /* Padding ajustado */
            text-align: left;
            vertical-align: top;
        }
        .criteria-table th {
            background-color: #e0e0e0;
            font-weight: bold;
        }
        .input-box {
            border: 1px dashed #999; /* Borda tracejada para indicar campo a ser preenchido */
            min-height: 20px; /* Altura mínima para a nota */
            padding: 3px; /* Padding interno */
            margin-top: 2px;
            background-color: #fff;
            box-sizing: border-box; /* Garante que padding e border estão inclusos na largura/altura */
            line-height: 1.2; /* Ajusta a altura da linha para texto dentro da caixa */
        }
        .notes-input-box {
            min-height: 40px; /* Altura maior para observações do critério */
        }
        .total-score-box {
            min-height: 25px;
            width: 80px; /* Largura específica para a nota geral */
            display: inline-block; /* Para que a caixa fique ao lado do texto */
            vertical-align: middle;
            margin-left: 5px;
        }
        .general-comments-box {
            min-height: 80px; /* Altura para os comentários gerais */
            width: 100%;
        }
        .page-break {
            page-break-before: always; /* Força uma nova página antes de cada projeto (exceto o primeiro) */
        }
        .avaliador-info {
            text-align: right;
            font-style: italic;
            margin-bottom: 15px;
            font-size: 12px;
        }
        .assinatura-area {
            margin-top: 50px;
            text-align: center;
            page-break-inside: avoid; /* Tenta manter a área de assinatura na mesma página */
        }
        .assinatura-line {
            border-bottom: 1px solid #000;
            width: 250px; /* Largura da linha de assinatura */
            margin: 0 auto 5px auto;
        }
    </style>
</head>
<body>
    <header>
        <h1>Relatório de Avaliação Offline</h1>
        <h2>Feira: <%= feira.nome %></h2>
        <p>Período: <%= formatarData(feira.inicioFeira) %> a <%= formatarData(feira.fimFeira) %></p>
        <% if (avaliador) { %>
            <div class="avaliador-info">Relatório para Avaliador: <strong><%= avaliador.nome %></strong></div>
        <% } %>
    </header>

    <% if (projetos.length === 0) { %>
        <div class="section">
            <p>Nenhum projeto encontrado para esta feira<%= avaliador ? ' e avaliador.' : '.' %></p>
        </div>
    <% } else { %>
        <% projetos.forEach((projeto, index) => { %>
            <% if (index > 0) { %>
                <div class="page-break"></div> <% } %>
            <div class="section">
                <h3>Projeto: <%= projeto.titulo %> (Código: <%= projeto.numero || 'N/A' %>)</h3>
                <div class="project-details">
                    <p><strong>Escola:</strong> <%= projeto.escolaNome || 'N/A' %></p>
                    <p><strong>Alunos:</strong> <%= projeto.alunos || 'N/A' %></p>
                    <p><strong>Área:</strong> <%= projeto.area || 'N/A' %></p>
                    <p><strong>Categoria:</strong> <%= projeto.categoria ? projeto.categoria.nome : 'N/A' %></p>
                    <p><strong>Resumo:</strong> <%= projeto.resumo || 'N/A' %></p>
                </div>

                <h4>Critérios de Avaliação:</h4>
                <% if (projeto.criteriosAvaliacao && projeto.criteriosAvaliacao.length > 0) { %>
                    <table class="criteria-table">
                        <thead>
                            <tr>
                                <th style="width: 50%;">Critério</th>
                                <th style="width: 15%;">Nota (5-10)</th> <th style="width: 35%;">Observações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% projeto.criteriosAvaliacao.forEach(criterio => { %>
                                <tr>
                                    <td>
                                        <%= criterio.nome %>
                                        <% if (criterio.descricao) { %>
                                            <br><small><%= criterio.descricao %></small>
                                        <% } %>
                                    </td>
                                    <td><div class="input-box"></div></td>
                                    <td><div class="input-box notes-input-box"></div></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>Nenhum critério de avaliação encontrado para a categoria deste projeto.</p>
                <% } %>

                <h4 style="margin-top: 20px;">Notas Finais:</h4>
                <p><strong>Nota Geral do Projeto:</strong> <div class="input-box total-score-box"></div></p>

                <h4 style="margin-top: 20px;">Comentários Gerais do Avaliador para este Projeto:</h4>
                <div class="input-box general-comments-box"></div>
            </div>
        <% }); %>
    <% } %>

    <div class="assinatura-area">
        <div class="assinatura-line"></div>
        <p>Assinatura do Avaliador</p>
    </div>
</body>
</html>