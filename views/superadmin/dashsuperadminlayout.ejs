<div id="feedback" class="tab-content <%= activeTab === 'feedback' ? '' : 'hidden' %>">
    <div class="p-4">
        <h2 class="text-xl font-bold mb-4">Feedbacks Recebidos</h2>

        <% if (feedbacks && feedbacks.length > 0) { %>
            <div class="space-y-4">
                <% feedbacks.forEach(fb => { %>
                    <div class="bg-white shadow rounded-lg p-4 border">
                        <p><strong>Categoria:</strong> <%= fb.categoria %></p>
                        <p><strong>Mensagem:</strong> <%= fb.mensagem %></p>
                        <% if (fb.nome) { %><p><strong>Nome:</strong> <%= fb.nome %></p><% } %>
                        <% if (fb.email) { %><p><strong>Email:</strong> <%= fb.email %></p><% } %>
                        <p class="text-sm text-gray-500 mt-2">Enviado em: <%= new Date(fb.createdAt).toLocaleString() %></p>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-gray-500">Nenhum feedback enviado at√© o momento.</p>
        <% } %>
    </div>
</div>
