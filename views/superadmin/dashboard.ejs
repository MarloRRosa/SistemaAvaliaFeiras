                <button class="tab-button <%= activeTab === 'mensagens' ? 'active' : '' %>" data-tab="mensagens">
                    <i class="fas fa-comments mr-2"></i>Mensagens
                </button>
                <button class="tab-button <%= activeTab === 'feedback' ? 'active' : '' %>" data-tab="feedback">
                    <i class="fas fa-comment-dots mr-2"></i>Feedback
                </button>
            </div>

<!-- ABA: FEEDBACK -->
