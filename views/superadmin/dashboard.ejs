        </div>
      </div>

      <!-- Datas Personalizadas -->
      <div id="datasPersonalizadas" class="<%= periodoSelecionado === 'personalizado' ? '' : 'hidden' %> mt-4 p-4 bg-white rounded-lg border-2 border-dashed border-blue-300">
        <h4 class="text-sm font-semibold text-gray-700 mb-3">Selecione o per√≠odo personalizado:</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="dataInicio" class="block text-sm font-medium text-gray-600 mb-1">Data de in√≠cio:</label>
            <input type="date" id="dataInicio" name="dataInicio" value="<%= dataInicioSelecionado %>" autocomplete="off" class="w-full border-2 border-gray-200 rounded-lg px-3 py-2 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200">
          </div>
          <div>
            <label for="dataFim" class="block text-sm font-medium text-gray-600 mb-1">Data de fim:</label>
            <input type="date" id="dataFim" name="dataFim" value="<%= dataFimSelecionado %>" autocomplete="off" class="w-full border-2 border-gray-200 rounded-lg px-3 py-2 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200">
          </div>
        </div>
      </div>
    </form>
  </div>

  <!-- Lista de Feedbacks Melhorada -->
  <% if (feedbacks && feedbacks.length > 0) { %>
    <div class="space-y-4">
      <% feedbacks.forEach((fb, index) => { %>
        <div class="bg-white border-l-4 <%= fb.categoria === 'elogio' ? 'border-green-500' : fb.categoria === 'sugestao' ? 'border-blue-500' : 'border-red-500' %> rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden">
          <div class="p-6">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <% if (fb.categoria === 'elogio') { %>
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                      <span class="text-2xl">üëè</span>
                    </div>
                  <% } else if (fb.categoria === 'sugestao') { %>
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                      <span class="text-2xl">üí°</span>
                    </div>
                  <% } else { %>
                    <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                      <span class="text-2xl">‚ö†Ô∏è</span>
                    </div>
                  <% } %>
                </div>
