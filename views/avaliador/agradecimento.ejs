                    <i class="fas fa-clock text-gray-600 mr-3"></i>
                    <div>
                        <p class="font-medium text-gray-700">Horário de Atendimento</p>
                        <p class="text-sm text-gray-500">Seg - Sex: 8h às 18h</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Modal de Feedback
        document.getElementById('abrirModalFeedback').addEventListener('click', () => {
            document.getElementById('modalFeedback').classList.remove('hidden');
        });

        document.getElementById('fecharModalFeedback').addEventListener('click', () => {
            document.getElementById('modalFeedback').classList.add('hidden');
        });

        // Modal de Contato
        document.getElementById('abrirModalContato').addEventListener('click', () => {
            document.getElementById('modalContato').classList.remove('hidden');
        });

        document.getElementById('fecharModalContato').addEventListener('click', () => {
            document.getElementById('modalContato').classList.add('hidden');
        });

        // Fecha modais ao clicar fora
        window.addEventListener('click', function (e) {
            const modalFeedback = document.getElementById('modalFeedback');
            const modalContato = document.getElementById('modalContato');
            
            if (e.target === modalFeedback) {
                modalFeedback.classList.add('hidden');
            }
            if (e.target === modalContato) {
                modalContato.classList.add('hidden');
            }
        });

        // Animação de entrada dos modais
        document.querySelectorAll('[id^="abrirModal"]').forEach(button => {
            button.addEventListener('click', function() {
                setTimeout(() => {
                    const modal = document.querySelector('.fixed:not(.hidden)');
                    if (modal) {
                        modal.querySelector('.transform').classList.add('scale-100');
                    }
                }, 10);
            });
        });
    </script>
</body>
</html>