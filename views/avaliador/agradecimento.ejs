    <!-- Modal de Feedback -->
    <div id="modalFeedback" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md relative transform transition-all">
            <button id="fecharModalFeedback" class="absolute top-3 right-3 text-gray-400 hover:text-red-500 text-2xl transition-colors">
                &times;
            </button>
            
            <div class="text-center mb-4">
                <i class="fas fa-comment-dots text-3xl text-blue-600 mb-2"></i>
                <h2 class="text-xl font-semibold text-gray-700">Enviar Feedback</h2>
                <p class="text-sm text-gray-500">Sua opinião é importante para nós</p>
            </div>
            
            <form action="/avaliador/feedback" method="POST">
    <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Categoria</label>
        <select name="categoria" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="Sugestão">Sugestão</option>
            <option value="Crítica">Crítica</option>
            <option value="Erro">Erro</option>
            <option value="Elogio">Elogio</option>
            <option value="Outro">Outro</option>
        </select>
    </div>

    <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Mensagem</label>
        <textarea 
            name="mensagem" 
            rows="4" 
            required 
            class="w-full p-3 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" 
            placeholder="Digite aqui sua sugestão ou comentário..."
        ></textarea>
    </div>

    <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Seu nome (opcional)</label>
        <input 
            type="text" 
            name="nome" 
            class="w-full p-3 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Ex: Maria Silva"
        />
    </div>

    <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Seu email (opcional)</label>
        <input 
            type="email" 
            name="email" 
            class="w-full p-3 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Ex: maria@email.com"
        />
    </div>

    <input type="hidden" name="tipo" value="Avaliador">
    
    <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
        <i class="fas fa-paper-plane mr-2"></i>Enviar Feedback
    </button>
</form>
        </div>
    </div>

    <!-- Modal de Contato -->
    <div id="modalContato" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md relative transform transition-all">
            <button id="fecharModalContato" class="absolute top-3 right-3 text-gray-400 hover:text-red-500 text-2xl transition-colors">
                &times;
            </button>
            
            <div class="text-center mb-6">
                <i class="fas fa-phone text-3xl text-purple-600 mb-2"></i>
                <h2 class="text-xl font-semibold text-gray-700">Entre em Contato</h2>
                <p class="text-sm text-gray-500">Escolha a melhor forma de nos contatar</p>
            </div>
            
            <div class="space-y-3">
               <!-- <a href="tel:+5511999999999" class="flex items-center p-3 bg-green-50 hover:bg-green-100 rounded-lg transition-colors">
