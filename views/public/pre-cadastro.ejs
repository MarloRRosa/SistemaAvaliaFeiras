<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Pré-Cadastro de Avaliador</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <div class="max-w-2xl mx-auto mt-12 p-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Pré-Cadastro de Avaliador</h1>

    <% if (mensagem) { %>
      <div class="bg-green-100 text-green-700 px-4 py-2 mb-4 rounded">
        <%= mensagem %>
      </div>
    <% } %>

    <form action="/pre-cadastro/<%= feiraId %>" method="POST" class="space-y-5">

      <% if (camposExtras && camposExtras.length > 0) { %>
        <% camposExtras.forEach(campo => { %>
          <div>
            <label for="extra_<%= campo.label %>" class="block text-sm font-medium text-gray-700">
              <%= campo.label %>
              <% if (campo.obrigatorio) { %><span class="text-red-500">*</span><% } %>
            </label>

            <% if (campo.tipo === 'seleção' && campo.opcoes) {
                 const opcoes = campo.opcoes.split(',').map(op => op.trim());
            %>
              <select id="extra_<%= campo.label %>" name="extras[<%= campo.label %>]"
                class="mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 border-gray-300"
                <%= campo.obrigatorio ? 'required' : '' %>>
                <option value="">Selecione...</option>
                <% opcoes.forEach(op => { %>
                  <option value="<%= op %>"><%= op %></option>
                <% }) %>
              </select>
            <% } else if (campo.tipo === 'número') { %>
              <input type="number"
                     id="extra_<%= campo.label %>"
                     name="extras[<%= campo.label %>]"
                     <%= campo.obrigatorio ? 'required' : '' %>
                     class="mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 border-gray-300">
            <% } else { %>
              <input type="text"
                     id="extra_<%= campo.label %>"
                     name="extras[<%= campo.label %>]"
                     <%= campo.obrigatorio ? 'required' : '' %>
                     class="mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 border-gray-300">
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500 italic">Nenhum campo configurado.</p>
      <% } %>

      <div class="text-center mt-6">
        <button type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition">
          Enviar Pré-Cadastro
        </button>
      </div>
    </form>
  </div>
</body>
</html>
