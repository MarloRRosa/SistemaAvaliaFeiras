      if (e.key === 'Escape') {
        const openModals = document.querySelectorAll('.modal-bg[style*="flex"]');
        openModals.forEach(modal => {
          modal.style.display = 'none';
          document.body.style.overflow = 'auto';
        });
      }
    });

