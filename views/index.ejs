<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-100 to-blue-200 py-24 text-center">
  <div class="container mx-auto px-6">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-blue-700 to-blue-500 mb-6 leading-tight">
      Simplifique a Avaliação de Projetos na Sua Escola
    </h1>
    <p class="text-gray-700 text-lg sm:text-xl max-w-3xl mx-auto mb-10">
      Sistema completo para simplificar o registro, avaliação e gestão de projetos escolares — ideal para feiras de ciências, mostras culturais e muito mais.
    </p>

    <div class="flex flex-col md:flex-row justify-center gap-6">
      <a href="/solicitar-acesso" class="bg-green-600 text-white px-8 py-4 rounded-full shadow-lg text-lg font-semibold hover:bg-green-700 hover:scale-105 transform transition duration-300">
        <i class="fas fa-handshake mr-2"></i> Sou uma Escola (Solicitar Acesso)
      </a>
      <a href="#funcionalidades" class="bg-blue-600 text-white px-8 py-4 rounded-full shadow-lg text-lg font-semibold hover:bg-blue-700 hover:scale-105 transform transition duration-300">
        <i class="fas fa-info-circle mr-2"></i> Saiba Mais
      </a>
    </div>

    <div class="mt-12">
      <p class="text-gray-600 text-base mb-4">Já possui acesso?</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/admin/login" class="text-blue-700 border border-blue-700 px-4 py-2 rounded-full hover:text-white hover:bg-blue-700 font-medium transition duration-300">
          <i class="fas fa-user-shield mr-1"></i> Acesso Administrador
        </a>
        <a href="/avaliador/login" class="text-purple-700 border border-purple-700 px-4 py-2 rounded-full hover:text-white hover:bg-purple-700 font-medium transition duration-300">
          <i class="fas fa-chalkboard-teacher mr-1"></i> Acesso Avaliador
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Funcionalidades -->
<section id="funcionalidades" class="py-24 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-extrabold text-center mb-16 text-gray-800">Recursos que Fazem a Diferença</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      <% const features = [
        { icon: 'fa-school', title: 'Gestão de Escolas', color: 'blue', desc: 'Centralize o registro de escolas, usuários e avaliadores, garantindo segurança e organização.' },
        { icon: 'fa-user-shield', title: 'Acesso Simplificado para Avaliadores', color: 'purple', desc: 'Avaliadores acessam projetos atribuídos de forma rápida e segura através de um PIN exclusivo.' },
        { icon: 'fa-chart-line', title: 'Relatórios Personalizados', color: 'green', desc: 'Defina critérios únicos e gere relatórios detalhados automaticamente.' },
        { icon: 'fa-medal', title: 'Ranking e Desempenho', color: 'orange', desc: 'Monitore desempenho dos projetos com rankings por categoria e turma.' },
        { icon: 'fa-calendar-alt', title: 'Organização de Eventos', color: 'red', desc: 'Gerencie feiras, categorias e cronogramas de forma fácil.' },
        { icon: 'fa-envelope-open-text', title: 'Comunicação Integrada', color: 'indigo', desc: 'Facilite a comunicação entre administradores, avaliadores e escolas.' },
      ]; %>
      <% features.forEach(f => { %>
        <div class="bg-gray-50 p-8 rounded-xl shadow-lg text-center border-t-4 border-<%= f.color %>-500 hover:scale-105 transition duration-300">
          <div class="text-<%= f.color %>-600 text-5xl mb-6">
            <i class="fas <%= f.icon %>"></i>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-gray-800"><%= f.title %></h3>
          <p class="text-gray-700 text-lg"><%= f.desc %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- Etapas -->
<section class="py-24 bg-gray-100">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-extrabold text-center mb-16 text-gray-800">Simples de Usar, Poderoso nos Resultados</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center">
      <% const steps = [
        { icon: 'fa-registered', title: '1. Cadastre e Configure', color: 'blue', desc: 'Sua escola se registra, cria a feira, define critérios e convida avaliadores.' },
        { icon: 'fa-clipboard-check', title: '2. Avaliação Descomplicada', color: 'green', desc: 'Avaliadores usam PINs exclusivos para atribuir notas e feedbacks.' },
        { icon: 'fa-chart-pie', title: '3. Análise e Resultados', color: 'purple', desc: 'Acompanhe métricas e gere relatórios e rankings em tempo real.' },
      ]; %>
      <% steps.forEach(s => { %>
        <div class="p-6 bg-white rounded-xl shadow-lg hover:scale-105 transition duration-300">
          <div class="text-<%= s.color %>-600 text-6xl mb-6 flex justify-center items-center h-20">
            <i class="fas <%= s.icon %>"></i>
          </div>
          <h3 class="font-bold text-2xl mb-3 text-gray-800"><%= s.title %></h3>
          <p class="text-gray-700 text-lg"><%= s.desc %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="bg-gradient-to-r from-blue-600 to-blue-800 py-20 text-white text-center">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl md:text-5xl font-extrabold mb-6">Pronto para Otimizar suas Avaliações?</h2>
    <p class="text-xl max-w-3xl mx-auto mb-10">
      Junte-se a outras escolas que já transformaram a gestão de seus projetos. Comece hoje mesmo!
    </p>
    <a href="/solicitar-acesso"
  class="inline-flex items-center justify-center bg-white text-blue-700 px-6 sm:px-8 py-4 sm:py-5 rounded-full shadow-xl text-base sm:text-lg md:text-xl font-bold text-center hover:bg-gray-100 hover:scale-105 transform transition duration-300 w-full sm:w-auto max-w-xs sm:max-w-full mx-auto">
  <i class="fas fa-arrow-right mr-2"></i> Solicitar Acesso para Minha Escola
</a>

  </div>
</section>

